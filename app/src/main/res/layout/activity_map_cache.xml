            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/chess_board_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/map_background" />

    </FrameLayout>


</RelativeLayout>